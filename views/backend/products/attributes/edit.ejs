<head>
        <meta charset="utf-8" />
        <title>Products | Smart Innovation</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="shortcut icon" href="../../../frontend_images/logo.jpg"/>
        <meta content="Kitabharu Admin Panel" name="description" />
        <meta content="Coderthemes" name="author" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- App favicon -->
        <%- include('../../../layouts/cssfile') %>

    </head>

    <body class="loading">

        <!-- Begin page -->
        <div id="wrapper">

            <!-- Topbar Start -->
            <%- include('../../../layouts/navbar') %>
            <!-- end Topbar -->

            <!-- ========== Left Sidebar Start ========== -->
            <%- include('../../../layouts/leftsidebar') %>
            <!-- Left Sidebar End -->

            <!-- ============================================================== -->
            <!-- Start Page Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">
                        
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Dashbard</a></li>
                                            <li class="breadcrumb-item ">Manage Admin</li>
                                            <li class="breadcrumb-item ">Admin</li>
                                            <li class="breadcrumb-item active"><%= title%></li>
                                        </ol>
                                    </div>
                                    <h4 class="page-title"><%= title%></h4>
                                </div>
                            </div>
                        </div>     
                        <% if(messages.success){ %>
                            <div class="alert alert-success alert-dismissible fade show" role="alert"  id="alertmessage">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            <%= messages.success%>
                            </div>
                        <% } %>

                        <% if(messages.error){ %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert"  id="alertmessage">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            <%= messages.error %>
                            </div>
                        <% } %> 
                        <!-- end page title --> 
                        <% if(productDetails.category_id._id == '5fc86fabe5825658544dfa06'){ %>
                        <form role="form" action="/product/<%= productId %>/attributes/update/<%= records._id %>" method="POST" class="parsley-examples" >
                        <% } %>

                        <% if(productDetails.category_id._id == '5fc871bce5825658544dfa0c'){ %>
                            <form role="form" action="/product/<%= productId %>/attributes/update/<%= records1._id %>" method="POST" class="parsley-examples" >
                            <% } %>
                            




                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card-box">
                                    <h4 class="header-title m-t-0 m-b-20">Edit Product Attributes</h4>
                                    <hr>
                                     <br>
                                     <% if(productDetails.category_id._id == '5fc86fabe5825658544dfa06'){ %>
                                        <input type="hidden" name="category_id" value="<%= productDetails.category_id._id %>">
                                    <div class="row" style="font-size: 13px;background: #f7f7f7;padding: 18px 0px 3px 20px;border-radius: 4px;margin-bottom: 20px;border: 1px solid #e7e7e7;">
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label for="inputEmail3" class="form-label">Product Code<span class="text-danger">*</span></label>
                                                <input type="text" name="product_code" value="<%= records.product_code %>" parsley-type="text" class="form-control"  placeholder="Enter a product code"  required>
                                            </div>
                                        </div>     
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label for="inputEmail3" class="form-label">Publication<span class="text-danger">*</span></label>
                                                <select  name="publication_name" class="selectpicker show-tick" data-style="btn-light" style="border: 1px solid lightgrey;" onchange="changeCategory()" required="">
                                                    <option value="">Please select publication </option>
                                                    <% if(records3.length > 0){ %>
                                                        <% records3.forEach(function(data){ %>
                                                            <option value="<%= data.publication_name %>" category="<%= data.publication_name %>" <% if( data.publication_name == records.publication ){ %> <%= selected %>  <% } %>><%= data.publication_name %></option>
                                                    <%  })
                                                    } %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label for="inputEmail3" class="form-label">Author<span class="text-danger">*</span></label>
                                                <input type="text" name="author_name" value="<%= records.author_name %>" parsley-type="text" class="form-control"  placeholder="Enter a author name" >
                                            </div>
                                        </div>
                              
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label for="inputEmail3" class="form-label">Total Pages</label>
                                                <input type="text" name="total_pages" value="<%= records.total_pages %>" parsley-type="text" class="form-control"  placeholder="Enter a total no. of pages" >
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label for="inputEmail3" class="form-label">Published Year</label>
                                                <input type="text" name="published_year" value="<%= records.published_year %>" parsley-type="text" class="form-control"  placeholder="Enter a published year" >
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label for="inputEmail3" class="form-label">Language</label>
                                                <input type="text" name="language" value="<%= records.language %>" parsley-type="text" class="form-control"  placeholder="Enter a language" >
                                            </div>
                                        </div>
                                    </div> <!-- end col -->
                                    <% } %>
                                    <% if(productDetails.category_id._id == '5fc871bce5825658544dfa0c'){ %>
                                        <input type="hidden" name="category_id" value="<%= productDetails.category_id._id %>">
                                        <div class="row" style="font-size: 13px;background: #f7f7f7;padding: 18px 0px 3px 20px;border-radius: 4px;margin-bottom: 20px;border: 1px solid #e7e7e7;">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="form-label">Product Code<span class="text-danger">*</span></label>
                                                    <input type="text" name="product_code" value="<%= records1.product_code %>"  parsley-type="text" class="form-control"  placeholder="Please enter a product code" autocomplete="off" required>
                                                    <span class="help-block" style="font-weight: normal;font-size: 11.5px;margin-bottom: 0;">
                                                        Please enter a product code. </span>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label for="inputEmail3" class="form-label">Manufacturer Name<span class="text-danger">*</span></label>
                                                    <input type="text" name="manufacturer_name" value="<%= records1.manufacturer_name %>"  parsley-type="text" class="form-control"  placeholder="Please enter a manufacturer name" autocomplete="off" required>
                                                    <span class="help-block" style="font-weight: normal;font-size: 11.5px;margin-bottom: 0;">
                                                        Please enter a product code. </span>
                                                </div>
                                            </div>
                                         
                                        </div>
                                        <% } %> 
                                    <div class="form-group row">
                                        <div class="col-8 offset-4">
                                            
                                            <button type="submit" id="addAdminBtn" dir="ltr" data-style="slide-up" class="btn btn-blue waves-effect waves-light ladda-button">
                                                Submit
                                            </button>
                                            <button type="reset"
                                                    class="btn btn-secondary waves-effect m-l-5">
                                                Cancel
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- end col -->
                            <div class="col-lg-4" style="display: none;">
                                <div class="card-box">
                                    <h4 class="header-title m-t-0 m-b-20">Status Info</h4>
                                    <hr>
                                    <br> 
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-4 col-form-label">Status<span class="text-danger">*</span></label>
                                        <div class="col-7">
                                            <% if(productDetails.category_id._id == '5fc86fabe5825658544dfa06'){ %>
                                            <select name="status" class="selectpicker show-tick" data-style="btn-light" style="border: 1px solid lightgrey;">
                                                <option value="Active" <% if(records.status == 'Active'){ %> <%=selected%> <% } %> >Active</option>
                                                <option value="Inactive"  <% if(records.status == 'Inactive'){ %> <%=selected%> <% } %> >Inactive</option>
                                            </select>
                                            <% } %>
                                            <% if(productDetails.category_id._id == '5fc871bce5825658544dfa0c'){ %>
                                                <select name="status" class="selectpicker show-tick" data-style="btn-light" style="border: 1px solid lightgrey;">
                                                    <option value="Active" <% if(records1.status == 'Active'){ %> <%=selected%> <% } %> >Active</option>
                                                    <option value="Inactive"  <% if(records1.status == 'Inactive'){ %> <%=selected%> <% } %> >Inactive</option>
                                                </select>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </form>
                        </div>
                        <!-- end row -->

                     
                        <!-- end row -->
                        
                    </div> <!-- container -->

                </div> <!-- content -->


            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->


        </div>
        <!-- END wrapper -->

        <!-- Right Sidebar -->
        <%- include('../../../layouts/rightsidebar') %> 
        <!-- /Right-bar -->

        <%- include('../../../layouts/script') %>     

        
    </body>

</html>