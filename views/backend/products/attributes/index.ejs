                                        <table id="basic-datatable" class="table dt-responsive nowrap w-100" style="font-size: 13.5px;">
                                            <thead>
                                                <tr>
                                                    <th>S.No</th>
                                                    <th>Product Code</th>
                                                    <th>Author</th>
                                                    <th>Publication</th>
                                                    <th>Published Year</th>
                                                    <th>Language</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                        
                                        
                                            <tbody id="attributes_table">
                                        
                                                <% if(records.length > 0) {
                                                 
                                                    var i = 1;
                                                    %>
                                                
                                                    <% records.forEach(function(data){ %>
