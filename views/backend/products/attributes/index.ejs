                                                                <a href="/product/<%= data.product_id %>/attributes/edit/<%= data._id%>"><button type="button" class="btn btn-info waves-effect waves-light" style="padding:0px;"> <i class="fe-edit" style="color: white;padding: 7px 10px;font-size: 17px;"></i></button></a>
                                                                &nbsp;
                                                                <a href="/product/<%= data.product_id %>/attributes/delete/<%= data._id%>">
                                                               <button type="button" class="btn btn-danger waves-effect waves-light" style="padding:0px;" onclick="if(confirm('Are you sure you want to delete?'))commentDelete(1);return false;"> <i class="fe-trash-2" style="color: white;padding: 7px 10px;font-size: 17px;"></i></button>
                                                           </a></td>
                                                        </tr>
                                                    <% i++; }) }%>
                                            </tbody>
                                        </table>
                                        <% } %>

                                        
                                    <% if(productDetails.category_id._id == '5fc871bce5825658544dfa0c'){ %>
                                        <table id="basic-datatable" class="table dt-responsive nowrap w-100" style="font-size: 13.5px;">
                                            <thead>
