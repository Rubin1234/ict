                            <div class="col-lg-12">
                                <div class="card-box">
                                    <h4 class="header-title m-t-0">Add Product Attributes</h4>
                                    <br>
                                    <form role="form" class="parsley-examples" action="/product/<%= productId %>/attributes/store" method="POST" enctype="multipart/form-data">
                                        <div id="attributes">

                                
                                            <!-- Book -->
                                            <% if(productDetails.category_id._id == '5fc86fabe5825658544dfa06'){ %>

                                        <div class="row" style="font-size: 13px;background: #f7f7f7;padding: 18px 0px 3px 20px;border-radius: 4px;margin-bottom: 20px;border: 1px solid #e7e7e7;">
                                     
                                            <div class="col-lg-4">
                                                <div class="form-group">
