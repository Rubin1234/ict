<!DOCTYPE html>
<html lang="en">
    
<!-- Mirrored from coderthemes.com/ubold/layouts/default/tables-datatables.html by HTTrack Website Copier/3.x [XR&CO'2014], Wed, 15 Jul 2020 07:32:15 GMT -->
<head>
        <meta charset="utf-8" />
        <title>Products | Smart Innovation</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="shortcut icon" href="../../../frontend_images/logo.jpg"/>
        <meta content="Kitabharu Admin Panel" name="description" />
        <meta content="Coderthemes" name="author" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- App favicon -->

        <%- include('../../layouts/cssfile') %>

    </head>

    <body class="loading">

        <!-- Begin page -->
        <div id="wrapper">

            <!-- Topbar Start -->
            <%- include('../../layouts/navbar') %>
            <!-- end Topbar -->

            <!-- ========== Left Sidebar Start ========== -->
            <%- include('../../layouts/leftsidebar') %>
            <!-- Left Sidebar End -->

            <!-- ============================================================== -->
            <!-- Start Page Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">
                        
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Dashboard</a></li>
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Manage Admins</a></li>
                                            <li class="breadcrumb-item active"><%= title %></li>
                                        </ol>
                                    </div>
                                    <h4 class="page-title"><%= title %></h4>
                                </div>
                            </div>
                        </div>    
         
                        <!-- end page title --> 
                        <div style="text-align: right;margin-bottom: 25px;">
                            <a href="/product/create"><button type="button" class="btn btn-success waves-effect waves-light" style="background-color: #07ddb2;border-color: #36d7b7;"><i class="fe-plus-circle" style="font-size: 15px;padding-right: 3px;"></i> Add Product</button></a>
                        </div>

                        <% if(messages.success){ %>
                            <div class="alert alert-success alert-dismissible fade show" role="alert"  id="alertmessage">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            <%= messages.success%>
                            </div>
                        <% } %>

                        <% if(messages.error){ %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert"  id="alertmessage">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            <%= messages.error %>
                            </div>
                        <% } %> 
                        <div class="row">
                  
                            <div class="col-12">
             
                                <div class="card">
                                    <div class="card-body">
                                        <!-- <h4 class="header-title">Admins List</h4>
                                        <p class="text-muted font-13 mb-4">
                                            DataTables has most features enabled by default, so all you need to do to use it with your own tables is to call the construction
                                            function:
                                            <code>$().DataTable();</code>. -->
                                        </p>

                                        <table id="basic-datatable" class="table dt-responsive nowrap w-100" style="font-size: 13.5px;">
                                            <thead>
                                                <tr>
                                                    <th>S.N</th>
                                                    <th>Product Details</th>
                                                    <th>Image</th>
                                                    <th>Category & Sub-Category</th>
                                                    <th>Product Images</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                        
                                        
                                            <tbody>
                                                <% if(records.length > 0){
                                                    var i =1;
                                                    %>
                                                <% records.forEach(function(data){ %>
                                                    <tr>
                                                        <td style="width: 7%;"><%= i %></td>

                                                        <td style="font-size: 13.7px;    line-height: 26px;">
                                                            
                                                            <span style="font-weight: bold;margin-right: 5px;">Name: </span><span style="background-color: #b24211;padding: 3px 8px;border-radius: 6px;color: white;font-size: 12px;"><%= data.product_name %></span><br>
                                                            <span style="font-weight: bold;margin-right: 5px;">Price: </span>Rs <%= data.product_price %><br>
                                                          
                                                        </td>


                                                        <td>
                                                            <% if(data.product_image != ''){ %>
                                                                <img src="../../../images/backend/products/<%= data.product_image%>" style="width: 70%;">
                                                                <% }else{ %>
                                                                    <img src="" style="width: 50%;">
                                                                <% } %>
                                                        </td>


                                                        <td>
                                                          <span style="padding: 5px 11px;background-color: #37a1cf;color: white;border-radius: 6px;font-size: 12px;margin-bottom: 4px;;">  <span style="font-weight: bold;font-size: 13.5px;;">Category:&nbsp;&nbsp;</span> <%= data.category_id.category_name %></span><br>
                                                          <br><span style="padding: 5px 11px;background-color: #40b85f;color: white;border-radius: 6px;font-size: 12px;"> <span style="font-weight: bold;font-size: 13.5px;;">Sub-Category:&nbsp;&nbsp;</span>  <%= data.subcategory_id.subcategory_name %></span><br>
                                                        
                                                        </td>


                                                             <td style="text-align: center;">
                                                                <a href="/product/<%= data._id %>/productimages/index"> <span style="color: #00acc1;font-size: 13px;"> <%= data.images.length %></span>&nbsp;<i class="fe-folder" style="font-size: 14px;color: #00acc1;"></i></a>
                                                            </td>


                                                          <td>
                                                            <% if(data.status == 'Active'){ %>
                                                            <span style="padding: 5px 11px;background-color: #07ddb2;color: white;border-radius: 6px;font-size: 14px;"><%= data.status %></span>
                                                            <% } %>
                                                            <% if(data.status == 'Inactive'){ %>
                                                                <span style="padding: 5px 11px;background-color: #f1556c;color: white;border-radius: 6px;font-size: 14px;"><%= data.status %></span>
                                                                <% } %>
                                                            </td>
                                                        <td>
                                                             <a href="/product/<%= data._id %>/attributes/index"><button type="button" class="btn btn-success waves-effect waves-success"  style="padding:5px 9px;background-color: #07ddb2;border-color: #36d7b7;"> <i class="fe-plus-circle" style="font-size: 14px;padding: 0px 3px;"></i> Attributes</button></a>
                                                             &nbsp;
                                                             <a href="/product/edit/<%= data._id %>"><button type="button" class="btn btn-info waves-effect waves-light" style="padding:0px;"> <i class="fe-edit" style="color: white;padding: 7px 10px;font-size: 17px;"></i></button></a>
                                                             &nbsp;
                                                             <a href="/product/delete/<%= data._id %>">
                                                            <button type="button" class="btn btn-danger waves-effect waves-light" style="padding:0px;" onclick="if(confirm('Are you sure you want to delete?'))commentDelete(1);return false;"> <i class="fe-trash-2" style="color: white;padding: 7px 10px;font-size: 17px;"></i></button>
                                                        </a></td>
                                                          
                                                       
                                                    </tr>
                                               <% i++; }) } %>
                                               
                                            </tbody>
                                        </table>

                                    </div> <!-- end card body-->
                                </div> <!-- end card -->
                            </div><!-- end col-->
                        </div>
                        <!-- end row-->


                      


            


               
                        <!-- end row-->
                        
                    </div> <!-- container -->

                </div> <!-- content -->


            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->


        </div>
        <!-- END wrapper -->

        <!-- Right Sidebar -->
        <%- include('../../layouts/rightsidebar') %>
        <!-- /Right-bar -->

        <!-- Right bar overlay-->
        <div class="rightbar-overlay"></div>

        <%- include('../../layouts/script') %>
        
    </body>

