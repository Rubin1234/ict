<head>
        <meta charset="utf-8" />
        <title>Slider | Smart Innovation</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="shortcut icon" href="../../../frontend_images/logo.jpg"/>
        <meta content="Kitabharu Admin Panel" name="description" />
        <meta content="Coderthemes" name="author" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" >
        <!-- App favicon -->
        <%- include('../../layouts/cssfile') %>

    </head>

    <body class="loading">

        <!-- Begin page -->
        <div id="wrapper">

            <!-- Topbar Start -->
            <%- include('../../layouts/navbar') %>
            <!-- end Topbar -->

            <!-- ========== Left Sidebar Start ========== -->
            <%- include('../../layouts/leftsidebar') %>
            <!-- Left Sidebar End -->

            <!-- ============================================================== -->
            <!-- Start Page Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">
                        
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Dashbard</a></li>
                                            <li class="breadcrumb-item ">Manage Admin</li>
                                            <li class="breadcrumb-item ">Admin</li>
                                            <li class="breadcrumb-item active"><%= title%></li>
                                        </ol>
                                    </div>
                                    <h4 class="page-title"><%= title%></h4>
                                </div>
                            </div>
                        </div>     

                           <!-- end page title --> 
                           <% if(messages.error){ %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert"  id="alertmessage">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">Ã—</span>
                                </button>
                            <%= messages.error %>
                            </div>
                        <% } %> 
                        <!-- end page title --> 

                        <form role="form" action="/slider/update" method="POST" class="parsley-examples"  id="parsley-examples" enctype="multipart/form-data" onsubmit="sliderFormValidation()"> 
                        <input type="hidden" name="id" value="<%= data._id %>" > 
                            <div class="row">    
                            <div class="col-lg-8">
                                <div class="card-box">
                                    <h4 class="header-title m-t-0 m-b-20">Edit Slider</h4>
                                    <hr>
                                     <br>
                                     <div class="form-group row">
                                        <label for="inputEmail3" class="col-2 col-form-label">Title</label>
                                        <div class="col-10">
                                            <input type="text" parsley-type="text" class="form-control"
                                                id="inputEmail2" placeholder="Enter an article title" value="<%= data.title %>" name="slidertitle">
                                        </div>
                                    </div>

                           
                                    
                                    <div class="form-group row">
                                        <label for="hori-pass3" class="col-2 col-form-label">Image<span class="text-danger" style="font-size: 16px;">*</span>
                                            </label>
                                        <div class="col-7">
                                            
                                            <img src="../../../images/backend/slider/<%= data.image %>" width="60%"  style="margin-bottom: 15px;">
                                            <p><%= data.image %></p>
                                            <span id="imgError"></span>
                                            <input type="hidden" name="previousSliderImage" value="<%= data.image %>" > 
                                            <input type="file" id="example-fileinput sss" class="form-control-file" name="sliderimage" onchange="imageSliderValidation()" >
                                            <span class="help-block" style="font-weight: normal;font-size: 11px;margin-bottom: 0;">
                                                Upload Image. you can also leave blank if u dont have any.</span>
                                                <span style="font-weight: normal;font-size: 11px;margin-bottom: 0;" >Recommended Size: 1633 * 630</span>
                                        </div>
                                    </div>

                                    

                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-2 col-form-label">Description</label>
                                        <div class="col-10">
                                            <span id="editorError"></span>
                                            <textarea name="description" id="slidereditor"  class="form-control" placeholder="Enter content here." onkeyup="changeSliderEditor(this)"><%=  data.description %></textarea>
                                            <span class="help-block" style="font-weight: normal;font-size: 11px;margin-bottom: 0;">
                                                If u have any information about product. Please provide us above.</span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-8 offset-2">
                                            
                                            <button type="submit"  dir="ltr" data-style="slide-up" class="btn btn-blue waves-effect waves-light ladda-button">
                                                Submit
                                            </button>
                                            <button type="reset"
                                                    class="btn btn-secondary waves-effect m-l-5">
                                                Cancel
                                            </button>
                                        </div>
                                    </div>
                                </div> <!-- end card-box -->

                             
                                
                            </div> <!-- end col -->
                            <div class="col-lg-4">
                                <div class="card-box">
                                    <h4 class="header-title m-t-0 m-b-20">Status Info</h4>
                                    <hr>
                                    <br> 
                                    <div class="form-group row">
                                        <label for="inputEmail3" class="col-4 col-form-label">Status<span class="text-danger">*</span></label>
                                        <div class="col-7">
                                            <select name="status" class="selectpicker show-tick" data-style="btn-light" style="border: 1px solid lightgrey;">
                                                <option value="Active" <% if(data.status == 'Active'){ %> <%=selected%> <% } %> >Active</option>
                                                <option value="Inactive"  <% if(data.status == 'Inactive'){ %> <%=selected%> <% } %> >Inactive</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </form>
                        </div>
                        <!-- end row -->

                     
                        <!-- end row -->
                        
                    </div> <!-- container -->

                </div> <!-- content -->

            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->


        </div>
        <!-- END wrapper -->

        <!-- Right Sidebar -->
        <%- include('../../layouts/rightsidebar') %> 
        <!-- /Right-bar -->

        <%- include('../../layouts/script') %>     

        
    </body>

</html>