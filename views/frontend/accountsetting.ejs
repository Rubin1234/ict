 <section style="width: 100%">
<div class="content-wrap login-register">
<div class="container clearfix">


<div class="row">
 

   <div class="alert alert-danger alert-dismissible fade show" role="alert" style="width: 100%;margin-bottom: 20px;display: none;" id="customerloginmessage">
     Please login to proceed to buy product.
   </div>





<div class="col-md-6 offset-md-3 nobottommargin">
    <% if(messages.success){ %>
        <div class="alert alert-success alert-dismissible fade show" role="alert" style="width: 100%;margin-bottom: 20px;" id="customerregistermessage">
        <%= messages.success%>
        </div>
    <% } %>

    <% if(messages.error){ %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="width: 100%;margin-bottom: 20px;" id="customerregistermessage">
           
        <%= messages.error %>
        </div>
    <% } %> 

    <h3 style="margin-bottom: 0px;"><i class="icon-settings2" style="color: #145ba2;"></i> &nbsp;&nbsp;Account Setting</h3>
    <hr style="background: lightgrey;height: 1.5px;margin-bottom: 3rem;">
    
    <form id="register-form" name="register-form" class="nobottommargin" action="/customer/accountsetting" method="post">
        <div class="col_full">
            <label for="register-form-name">Name:</label>
            <input type="text" value="<%= cookiesCustomerrName %>" id="register-form-name" name="customerusername" v class="form-control" required />
        </div>
        <div class="col_full ">
            <label for="register-form-email">Email Address:</label>
            <input type="email" value="<%= cookiesCustomerEmail %>" id="register-form-email" name="customeremail"  class="form-control" required/>
        </div>
        <div class="col_full ">
            <label for="register-form-email">Phone Number:</label>
            <input type="number" value="<%= customerDetails.phone_number %>" id="register-form-email" name="pnumber" class="form-control" required/>
        </div>
        <div class="col_full">
            <label for="register-form-password">Old Password:</label>
            <input type="password" name="oldpassword" value="" class="form-control" required/>
        </div>
        <div class="col_full">
            <label for="register-form-password">New Password:</label>
            <input type="password"  name="newpassword" value="" class="form-control" id="newpassword"/>
        </div>
        <div class="col_full">
            <label for="register-form-password">Confirm Password:</label>
            <input type="password"  name="confirmpassword" value="" class="form-control" id="conpassword"/>
            <span style="color: crimson;" id="pwnotmatched"></span>
        </div>

        <div class="clear"></div>
        <div class="col_full nobottommargin">
            <button class="button button-3d button-black nomargin"  value="register" id="customeraccountupdate">Submit Now</button>
        </div>
</form>
</div>
</div>



</div>
</div>
