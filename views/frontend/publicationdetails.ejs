<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<%- include('../layouts/frontend/head') %>

  <body class="stretched">
    <div id="wrapper" class="clearfix">
      <%- include('../layouts/frontend/top-header') %>
        <header id="header" class="sticky-style-2">
          <%- include('../layouts/frontend/mid-header') %>
            <%- include('../layouts/frontend/menu') %>
        </header>

        <div class="banner">
          <div class="overlay"></div>
          <div class="inner-banner container">
            <div class="inner-banner-title">
              <h4>Our Publication Details</h4>
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/publications">Publication</a></li>
                <li class="breadcrumb-item active"><a href="#">
                    <%= publicationDetail.publication_name %>
                  </a></li>
              </ol>
            </div>
          </div>
        </div>

        <section class="section" style="padding: 80px 0px;">
          <div class="container frontend-publicationDetails">
            <div class="row">
              <div class="col-lg-4">
                <div class="publication-image">
                  <img src="../images/backend/publication/<%= publicationDetail.publication_image %>" alt=""
                    style="width: 100%;padding: 15px;">
                </div>
              </div>
              <div class="col-lg-8">
                <div class="publication-details">
                  <div class="publication-details-header">
                    <span>
                      <%= publicationDetail.publication_name %> Publication
                    </span>
                  </div>
                  <p>
                    <%- publicationDetail.publication_description %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </section>

        <section class="section" style="padding-top: 0px;">
          <div class="container">
            <div class="section-inner">
              <div class="section-title">
                <h3>Books From Our Publication</h3>
              </div>
            </div>


            <div class="publication-books">
              <div class="row">
                <% if(publicationBooks.length> 0){ %>
                  <% publicationBooks.forEach(function(data){ %>
                    <div class="col-lg-3" style="max-width: 20%;">
                      <div class="oc-item">
                        <div class="new-arrival-books">
                          <img src="../images/backend/products/<%= data.product_id.product_image %>" alt=""
                            style="width: 100%;height: 235px;">
                          <div class="new-arrival-books-desc">

                            <h4>
                              <%= data.product_id.product_name %>
                            </h4>
                            <span style="font-size: 14px;color: #8b8b8b">
                              <%= data.author_name %>
                            </span>
                            <div class="price-box">
                              <h4>Rs. <%= data.product_id.product_price %>
                              </h4>
                            </div>
                          </div>
                          <div class="view-book">
                            <a href="/bookdetails/<%= data.slug %>"><button type="" class="form-control"><i
                                  class="icon-line-eye"></i>&nbsp;&nbsp;View Details</button></a>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% }) %>
                      <% }else{ %>
                        <div class="col-md-12">
                          <h4>Sorry, No Book From This Publication</h4>
                        </div>
                        <% } %>
              </div>
            </div>
          </div>
        </section>

        <%- include('../layouts/frontend/footer') %>
        <!-- End Footer -->
        <!-- Copyright -->
        <div class=" text-center footer-bottom">
          <p class="mt-0 mb-0">&copy; Copyright 2020 <strong style="color: #d14031">Smart Innovation</strong>. All
            Rights Reserved</p>
          <!--     <small class="mt-0 mb-0">
         Made with <i class="mdi mdi-heart text-danger"></i> by <a target="_blank" href="https://giftechies.com/" class="text-warning">Giftechies</a>
         </small> -->
        </div>



    </div>
    <%- include('../layouts/frontend/script') %>
  </body>

